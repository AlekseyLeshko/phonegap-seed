{
  "basepaths": "",
  "browsers": [
    "Chrome",
    "PhantomJS",
    "Firefox",
    "FirefoxAurora",
    "FirefoxNightly"
  ],
  "frameworks": ["jasmine"],
  "files": [
    "bower_components/ionic/js/ionic.bundle.js",
    "bower_components/angular-mocks/angular-mocks.js",
    "test/testHelper.js",
    "bower_components/jquery/dist/jquery.min.js",
    "lib/*.js", {
      "pattern": "test/fixtures/*.json",
      "watched": true,
      "served": true,
      "included": false
    },
    "app/**/*.js",
    "test/unit/**/*.js"
  ],
  "autoWatch": true,
  "usePolling": true,
  "plugins": [
    "karma-chrome-launcher",
    "karma-phantomjs-launcher",
    "karma-firefox-launcher",
    "karma-jasmine",
    "karma-coverage"
  ],
  "reporters": ["progress", "coverage"],
  "preprocessors": {
    "app/**/*.js": ["coverage"]
  },
  "coverageReporter": {
    "type": "html",
    "dir": "coverage/"
  }
}
